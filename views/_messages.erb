<div class="timeline">
    <% messages.each do |message| %>
        <p>
            <div style="float:left; margin:5px">
                <a href="http://twitter.com/<%= message['sender']['screen_name'] %>">
                    <img src="<%= message['sender']['profile_image_url'] %>" width="48" height="48"/>
                </a>
            </div>
            <div style="">
                <a href="http://twitter.com/<%= message['sender']['screen_name'] %>">@<%= message['sender']['screen_name'] %></a>
                <%= message['text']%>
            </div>
            <br clear="all"/>
        </p>
    <% end %>
</div>